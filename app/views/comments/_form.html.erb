<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your Comment" %><br />
    <%= f.text_field :author_name %><br />
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %><br />
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
  <% end %>
